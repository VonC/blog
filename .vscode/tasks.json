{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go install",
            "type": "shell",
            "command": "go install",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}\\demo\\julia\\src\\julia_raw",
                "env": {
                    "PATH": "${env:Path};${env:PRGS}\\go\\latest\\bin",
                    "GOPATH": "${workspaceRoot}\\demo\\julia"
                }
            },
            "problemMatcher":"$go"
        },
        {
            "label": "julia_raw",
            "type": "shell",
            "command": "julia_raw",
            "options": {
                "cwd": "${workspaceRoot}\\demo\\julia\\bin"
            },
            "problemMatcher":"$go"
        }
    ]
}